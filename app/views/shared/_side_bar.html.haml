.side__header
  .side__header__box
    %h3.side__header__box__user-name
      = current_user.name
    %ul.side__header__box__menu
      %li.side__header__box__menu--new-group
        = link_to new_group_path do
          = fa_icon 'pencil-square-o', class: 'icon'
      %li.side__header__box__menu--edit-user 
        = link_to edit_user_path(current_user) do
          = fa_icon 'cog', class: 'icon'
.side__groups
  - current_user.groups.each do |side__groups__group|
    .side__groups__group
      = link_to group_messages_path(side__groups__group) do
        .side__groups__group--group-name
          = side__groups__group.name
